<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.empty.ispy">
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_account_box"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SignPackage.SignUpAct"></activity>
        <activity android:name=".Menu.ConThemeAct"></activity>
        <activity android:name=".Menu.Home"></activity>
        <activity android:name=".SignPackage.SignInAct">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Game.PlaySettings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.empty.ispy.Chat.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name="com.empty.ispy.Chat.ui.ChatActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.empty.ispy.Chat.MainActivity"/>
        <activity android:name="com.empty.ispy.Chat.ui.AddGroupActivity"
            android:theme="@style/MyThemeNoActionbar"/>
        <service android:name="com.empty.ispy.Chat.service.FriendChatService"
            android:exported="false"
            android:persistent= "true" />
        
    </application>

</manifest>